{% extends 'base.html.twig' %}

{% block title %}Réalisations{% endblock %}

{% block body %}
    <div class="row realisation-page mobile-realisation">
        <div class="d-xl-none d-lg-none mobile-header" style="background-image: url({{ vich_uploader_asset(realisation, 'enteteFile') }})"></div>
        <div class="col-12">
            <p class="page-title">Réalisations</p>
            <p class="page-title">EHPAD</p>
            {% for ehpad in ehpads %}
                <div class="col-12">
                    <a href="{{ path('ehpad_view', {slug: ehpad.slug}) }}">
                        <img src="{{ vich_uploader_asset(ehpad, 'thumbnailFile') }}"/>
                        <p>{{ ehpad.title }}</p>
                    </a>
                </div>
            {% endfor %}
            <p class="page-title">Logements collectifs</p>
            {% for collectif in collectifs %}
                <div class="col-12">
                    <a href="{{ path('collectif_view', {slug: collectif.slug}) }}">
                        <img class="img" src="{{ vich_uploader_asset(collectif, 'thumbnailFile') }}"/>
                        <p>{{ collectif.title }}</p>
                    </a>
                </div>
            {% endfor %}
            <p class="page-title">Equipements</p>
            {% for equipement in equipements %}
                <div class="col-12">
                    <a href="{{ path('equipement_view', {slug: equipement.slug}) }}">
                        <img class="img" src="{{ vich_uploader_asset(equipement, 'thumbnailFile') }}"/>
                        <p>{{ equipement.title }}</p>
                    </a>
                </div>
            {% endfor %}
            <p class="page-title">Lieux Cultuels</p>
            {% for cultuel in cultuels %}
                <div class="col-12">
                    <a href="{{ path('cultuel_view', {slug: cultuel.slug}) }}">
                        <img class="img" src="{{ vich_uploader_asset(cultuel, 'thumbnailFile') }}"/>
                        <p>{{ cultuel.title }}</p>
                    </a>
                </div>
            {% endfor %}
            <p class="page-title">Logements</p>
            {% for individuel in individuels %}
                <div class="col-12">
                    <a href="{{ path('individuel_view', {slug: individuel.slug}) }}">
                        <img class="img" src="{{ vich_uploader_asset(individuel, 'thumbnailFile') }}"/>
                        <p>{{ individuel.title }}</p>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
