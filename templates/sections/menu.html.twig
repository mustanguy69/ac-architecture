<div class="row menu-container">
    <div class="col-6 col-xl-3 col-lg-3">
        <a href="{{ path('homepage') }}"><img src="{{ asset('build/logo.png') }}" alt="logo AC Architecture" class="logo"/></a>
    </div>
    <div class="col-6 d-xl-none d-lg-none d-flex justify-content-end">
        <div class="menu-hamburger">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <ul class="menu-links col-9 align-self-flex-end text-right d-none d-lg-flex d-xl-flex">
        <li class="dropdown">
            {% set agence = ["presentation", "equipe", "organisation"] %}
            <a href="" id="agence-link" aria-haspopup="true" aria-expanded="false"
               class="dropdown-toggle {% if app.request.get('_route') in agence %}active{% endif %}"
               data-toggle="dropdown">
                L'AGENCE
            </a>
            <ul class="dropdown-menu sub-menu" aria-labelledby="agence-link">
                <li><a href="{{ path('presentation') }}" class="sub-menu-link dropdown-item">Présentation</a></li>
                <li><a href="{{ path('equipe') }}" class="sub-menu-link dropdown-item">Equipe</a></li>
                <li><a href="{{ path('organisation') }}" class="sub-menu-link dropdown-item">Organisation</a></li>
            </ul>
        </li>
        <li><a href="{{ path('services') }}" class="{% if app.request.get('_route') == 'services' %}active{% endif %}">SERVICES</a></li>
        <li class="dropdown">
            {% set realisations = ["ehpad", "collectifs", "individuels", "cultuels", "equipements"] %}
            <a href="" id="realisation-link" aria-haspopup="true" aria-expanded="false"
               class="dropdown-toggle {% if app.request.get('_route') in realisations %}active{% endif %}" data-toggle="dropdown">
                RÉALISATIONS
            </a>
            <ul class="dropdown-menu sub-menu" aria-labelledby="realisation-link">
                <li><a href="{{ path('ehpad') }}" class="sub-menu-link dropdown-item">EHPAD</a></li>
                <li><a href="{{ path('collectifs') }}" class="sub-menu-link dropdown-item">Logements collectifs</a></li>
                <li> <a href="{{ path('individuels') }}" class="sub-menu-link dropdown-item">Logements individuels</a></li>
                <li><a href="{{ path('cultuels') }}" class="sub-menu-link dropdown-item">Lieux cultuels</a></li>
                <li><a href="{{ path('equipements') }}" class="sub-menu-link dropdown-item">Équipements</a></li>
            </ul>
        </li>
        <li><a href="{{ path('contact') }}" class="{% if app.request.get('_route') == 'contact' %}active{% endif %}">CONTACT</a></li>
    </ul>
</div>

<div class="hamburger-menu-container">
    <a class="close-menu"></a>
    <a href="{{ path('homepage') }}"><img src="{{ asset('build/logo-blanc.png') }}" /></a>
    <a href="{{ path('homepage') }}" >L'AGENCE</a>
    <a href="{{ path('equipe') }}" >L'EQUIPE</a>
    <a href="{{ path('services') }}" >SERVICES</a>
    <a href="{{ path('realisations-all') }}" >REALISATIONS</a>
    <a href="{{ path('contact') }}" >CONTACTS</a>
    <a href="{{ path('mentions') }}" >MENTIONS LEGALES</a>
</div>

<script>
    $('.menu-hamburger').on('click', function () {
        $('.hamburger-menu-container').fadeIn();
    });

    $('.close-menu').on('click', function () {
        $('.hamburger-menu-container').fadeOut();
    });
</script>